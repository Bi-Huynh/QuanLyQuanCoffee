<Page x:Class="QuanLyQuanCoffee.Views.frmQuanLyNguyenLieu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyQuanCoffee.Command"
      mc:Ignorable="d" 
      d:DesignHeight="685" d:DesignWidth="1200"
      Title="frmQuanLyNguyenLieu">
    <Page.CommandBindings>
        <CommandBinding Command="local:CMyCommand_NguyenLieu.lenhXoaNguyenLieu"
                        Executed="CommandBinding_Executed_XoaNguyenLieu"
                        CanExecute="CommandBinding_CanExecute_XoaNguyenLieu"/>
    </Page.CommandBindings>
    <StackPanel ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" CanHorizontallyScroll="True" CanVerticallyScroll="True">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="52.2*"/>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="17.8*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="15"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="15"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="1" Grid.Column="1" Content="Danh Sách Nguyên Liệu" FontSize="18" VerticalContentAlignment="Center" FontWeight="Bold" FontFamily="Arial"/>
            <TextBox x:Name="txtTimKiem" Grid.Row="1" Grid.Column="2" FontFamily="Arial" FontSize="15" VerticalContentAlignment="Center"/>
            <ComboBox x:Name="cmbTimKiem" Grid.Row="1" Grid.Column="4" FontFamily="Arial" FontSize="13" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                <ComboBoxItem Content="Tên nguyên liệu" IsSelected="True"/>
                <ComboBoxItem Content="Loại nguyên liệu"/>
            </ComboBox>
            <Button x:Name="btnXemThongTinChiTiet" Grid.Row="1" Grid.Column="6" Content="Xem thông tin chi tiết" FontFamily="Arial" FontSize="13"/>
        </Grid>
        <DataGrid x:Name="dgDSNguyenLieu" MinHeight="565" Margin="10,0" AutoGenerateColumns="False" 
                  SelectedValuePath="maNguyenLieu" HorizontalContentAlignment="Center" 
                  Background="White" FontFamily="Arial">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã nguyên liệu" Binding="{Binding maNguyenLieu}" Width="1*"/>
                <DataGridTextColumn Header="Tên" Binding="{Binding tenNguyenLieu}" Width="1.5*"/>
                <DataGridTextColumn Header="Đơn giá" Binding="{Binding donGia}" Width="1*"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding soLuong}" Width="1*"/>
                <DataGridTextColumn Header="Ngày hết hạn" Binding="{Binding ngayHetHan}" Width="1.5*"/>
                <DataGridTextColumn Header="Ngày nhập hàng" Binding="{Binding ngayNhap}" Width="1.5*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="35*"/>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="15"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="15"/>
            </Grid.RowDefinitions>
            <Button x:Name="btnQuanLyLoaiNguyenLieu" Grid.Row="1" Grid.Column="1" Content="Quản Lý Loại Nguyên Liệu" FontFamily="Arial"/>
            <Button x:Name="btnRefesh" Grid.Row="1" Grid.Column="3" Content="Refect" FontFamily="Arial"/>
            <Button x:Name="btnSua" Grid.Row="1" Grid.Column="5" Content="Sửa" FontFamily="Arial"/>
            <Button x:Name="btnXoa" Grid.Row="1" Grid.Column="7" Content="Xóa" FontFamily="Arial" Command="local:CMyCommand_NguyenLieu.lenhXoaNguyenLieu"/>
            <Button x:Name="btnThem" Grid.Row="1" Grid.Column="9" Content="Thêm" FontFamily="Arial" Height="30" VerticalAlignment="Bottom"/>
        </Grid>
    </StackPanel>
</Page>
