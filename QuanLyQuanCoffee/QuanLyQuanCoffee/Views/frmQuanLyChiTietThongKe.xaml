        <StackPanel>
            <Grid Height="465">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"></RowDefinition>
                    <RowDefinition Height="435"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="10"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="1" Content="Chi tiết thống kê" FontSize="12"/>
                <Grid Grid.Row="1" Grid.Column="1">
                    <DataGrid  Name="dgQlchitiethoadon" AutoGenerateColumns="False" FontSize="12" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mã nhân viên" Binding="{Binding maNhanVien,Mode=TwoWay}"/>
                            <DataGridTextColumn Header="Mã họ nhân viên" Binding="{Binding hoNhanVien}"/>
                            <DataGridTextColumn Header="Tên Nhân Viên" Binding="{Binding tenNhanVien}"/>
                            <DataGridTextColumn Header="Số lượng hóa đơn" Binding="{Binding soLuongHoaDon}"/>
                            <DataGridTextColumn Header="Số lượng bán" Binding="{Binding soLuongBan}"/>
                            <DataGridTextColumn Header="Ngày lập" Binding="{Binding ngayLap}"/>
                            <DataGridTextColumn Header="Thành tiền" Binding="{Binding thanhTien}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </StackPanel>
    </StackPanel>
